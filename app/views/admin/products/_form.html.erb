<div class="panel-body">
<%= simple_form_for [:admin, @product] do |f| %>
    <div class="form-group">
        <%= f.input :name, label: "商品名稱" ,required: false,label_html: { class: 'control-label' }, wrapper_html: { class: 'label-floating' }%>
        <%= f.input :description, label: "商品內容",required: false ,label_html: { class: 'control-label' }, wrapper_html: { class: 'label-floating' }%>        
        <%= f.input :image, as: :file ,required: false, label: "上傳商品圖片(點我)" %> 
        <div class="produts-types-price">
        <%= f.input :category_id, label: "商品類型",required: false ,collection: Category.all,checked: @product.category, input_html: { class: 'category' } %>
        <%= f.input :price, label: "價錢" ,label_html: { class: 'control-label' }, wrapper_html: { class: 'label-floating' }%>                       
        </div>
        <!-- size 庫存量 -->
        <div class="size-quantity">
            <%= f.input :s, label: "S 號庫存" ,required: false,label_html: { class: 'control-label' }, wrapper_html: { class: 'label-floating' }%>
            <%= f.input :m, label: "M 號庫存" ,required: false,label_html: { class: 'control-label' }, wrapper_html: { class: 'label-floating' }%>
            <%= f.input :l, label: "L 號庫存" ,required: false,label_html: { class: 'control-label' }, wrapper_html: { class: 'label-floating' }%>
        </div>
    </div>
    <div class="form-actions">

    <%= button_tag name: "send",type: 'submit',class: "btn submit-button",data: { disable_with: "送出中..." } do %>
        送出 <i class="material-icons right">send</i>
    <% end %>
    <%= link_to admin_products_path, class: "waves-effect waves-light btn" do %> 
           取消<i class="material-icons right">cancel</i>
    <% end %>
    </div>
<% end %>
</div>
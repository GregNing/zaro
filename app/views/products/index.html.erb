<% provide :zaro_title, "ZARO" %>
<div class="product-body col-md-12">
    <div class="products-header row">
    </div>
    <div class="side_link_ row">
        <div class="link_to_pic_products">
            <%= link_to "#" do %>
                <%= image_tag "category/clothes/clothes-3.jpg" %>
            <% end %>
            <%= link_to "#" do %>
                <%= image_tag "category/clothes/clothes-2.jpg" %>
            <% end %>
            <%= link_to "#" do %>
                <%= image_tag "category/clothes/clothes-1.jpg" %>
            <% end %>
            <ul class="link_to_pic_slide">
                <li>
                <%= button_tag "0",type: 'button', id: '0' %>
                </li>
                <li>
                <%= button_tag "1",type: 'button', id: '1' %>
                </li>
                <li>
                <%= button_tag "2",type: 'button', id: '2' %>
                </li>
            </ul>
        </div>
    </div>
    <div class="products-list-content--result">
        <ul class="items">
            <% @products.each do |product| %>
                <li>
                    <!-- 商品連接到修改 -->
                    <%= link_to product_path(product) , class: "items__image" do %>
                        <%= image_tag product.image.url ,title: product.name , alt: product.name %>
                    <% end %>
                    <!-- 商品資訊 -->
                    <div class="item_info">
                        <div class="productname">
                            <%= link_to product.name , edit_admin_product_path(product) %>
                        </div>
                        <ul class="size">
                            <li class="<%= render_nosize_line(product.s) %>">
                                    <span>S: <%= product.s %></span>件                                
                            </li>
                            <li class="<%= render_nosize_line(product.m) %>">
                                    <span>M: <%= product.m %></span>件
                            </li>
                            <li class="<%= render_nosize_line(product.l) %>">
                                <span>L: <%= product.l %></span>件
                            </li>
                        </ul>
                        <p>
                            <span>TWD.<%= product.price %> </span>
                        </p>
                    </div>
                </li>        
            <% end %>  
        </ul>
    </div>
</div>
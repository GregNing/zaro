<% if flash.any? %>
    <% metion_flashes.each do |key,value| %>
        <div class="alert alert-fixed alert-<%= flash_class(key) %>" id="alert-flash">
            <div class="container">
                <div class="alert-icon">
                    <i class="material-icons">
                    <%= icons_flashes(key) %>
                    </i>
                </div>
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">                    
                    <span aria-hidden="true"><i class="material-icons">clear</i></span>
                </button>
                <%= value %>                
            </div>            
        </div>
    <% end %>
<% end %>
